draw = function() {
    if(scene === 1) { 
        background(64, 255, 0);
        fill(0, 0, 0);
        textSize(50);
        text("Blackjack",102,17);
        textSize(18);
        text("By: Zack Fraser and Henry Gutierrez", 63, 77);
        text("Play a hand of blackjack against the computer!", 20, 214);
        drawBitmoji(135,128,50);
        drawPerson(242,94,43);
        fill(0, 0, 0);
        btn1.draw();
        btn4.draw();
        
    }
    if(scene === 2){
        background(0, 247, 255);
        textSize(30);
        fill(255, 0, 0);
        text("Computers Score: " + computerScore , 20,25);
        text("Your Score: " + userScore , 20,298);
        leftCard = allCards[rand](-95,-10);
        rightCard = allCards[33](61,-9);
        btn2.draw();
        btn3.draw();
        
   }
   if(scene === 3){
       background(255, 102, 0);
       textSize(30);
       fill(0, 0, 0);
       text("Rules:", 150, 35);
       textSize(15);
       text("1.) Start with two random cards and a random score for", 7, 86);
       text("the dealer.", 26, 117);
       text("2.) If you aren't as close to 21 as you would like to be,", 7, 157);
       text("draw another card.", 26, 190);
       text("3.) Try to get as close to 21 as you can without going over.", 7, 230);
       text("4.) If you go over 21, you lose!",7, 275);
       text("5.) If you are closer to 21 than the dealer at the end of the",7, 319);
       text("hand, you win!", 26, 353);
       
   }
};
