var allCards = [Aceclubs, twoclubs,threeclubs,fourclubs,fiveclubs,sixclubs,sevenclubs, eightclubs,nineclubs,JClubs,QClubs,KClubs, AceHearts, twoHearts,threeHearts,fourHearts,fiveHearts,sixHearts,sevenHearts,eightHearts,nineHearts,JHearts,QHearts,KHearts, AceDiamonds, twoDiamonds,threeDiamonds,fourDiamonds,fiveDiamonds,sixDiamonds,sevenDiamonds, eightDiamonds,nineDiamonds,JDiamonds,QDiamonds,KDiamonds, Acespades, twospades,threespades,fourspades,fivespades,sixspades,sevenspades, eightspades,ninespades,Jspades,Qspades,Kspades];

var Button = function(config) {
    this.x = config.x || 0;
    this.y = config.y || 0;
    this.width = config.width || 150;
    this.height = config.height || 50;
    this.label = config.label || "Click";
    this.onClick = config.onClick || function() {};
};

//Draw method for the Button
Button.prototype.draw = function() {
    stroke(0, 0, 0);
    if(scene === 1){
        fill(78, 27, 150);
    }
    else{fill(255, 0, 0);}
    rect(this.x, this.y, this.width, this.height, 5);
    fill(230, 255, 0);
    textSize(19);
    textAlign(LEFT, TOP);
    text(this.label, this.x+10, this.y+this.height/4);
};

//Detect if mouse is inside Button
Button.prototype.isMouseInside = function() {
    return mouseX > this.x &&
           mouseX < (this.x + this.width) &&
           mouseY > this.y &&
           mouseY < (this.y + this.height);
};

//Register mouse click
Button.prototype.handleMouseClick = function() {
    if (this.isMouseInside()) {
        this.onClick();
    }
};

//The start game button
var btn1 = new Button({
    x: 145,
    y: 320,
    width: 118,
    label: "Start Game",
    onClick: function() {
        scene = 2;
    }
});

var btn2 = new Button({
    x: 55,
    y: 335,
    width: 118,
    label: "Left Card",
    onClick: function() {
        userScore += leftCard;
        rand = round(random(0.5, 46.5));
        leftCard = allCards[rand](-95,-10);
    }
});

var btn3 = new Button({
    x: 220,
    y: 335,
    width: 118,
    label: "Right Card",
    onClick: function() {
        userScore += rightCard;
        rand2 = round(random(0.5, 46.5));
        rightCard = allCards[rand2](61,-9);
    }
});

var btn4 = new Button({
    x: 143,
    y: 251,
    width: 120,
    label: "How to play",
    onClick: function() {
        scene = 3;
    }
});
 
mouseClicked = function() {
    if(scene === 1) {
        btn1.handleMouseClick();
        btn4.handleMouseClick();
    }
    if(scene === 2){
        btn2.handleMouseClick();
        btn3.handleMouseClick();
    }
};
